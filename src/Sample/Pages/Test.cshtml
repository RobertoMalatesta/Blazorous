@page "/test"

<Dynamic TagName="div" css="@css" type="success" debug="true">Test</Dynamic>

@functions {
    Css css = Css.CreateNew()
        .AddRule("border", 5)
        .AddClass("alert")
        .AddDynamicRule((css, attributes) =>
        {
            var type = attributes.GetStringAttribute("type", "primary");
            css.AddClass($"alert-{type}");
        });
}